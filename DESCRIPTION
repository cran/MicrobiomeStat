Package: MicrobiomeStat
Type: Package
Title: Statistical Methods for Microbiome Compositional Data
Version: 1.3
Date: 2026-01-05
Authors@R: c(
              person("Xianyang", "Zhang", role = "aut", email = "zhangxiany@stat.tamu.edu"),
              person("Jun", "Chen", role = c("aut", "cre"),
                     email = "chen.jun2@mayo.edu"),
